{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ScenarioJudgementSheet",
    "type": "object",
    "properties": {
        "title": {
            "type": "string"
        },
        "scenario": {
            "type": "object",
            "description": "Optional scenario metadata for the tab this sheet represents.",
            "properties": {
                "scenario_id": { "type": "string", "format": "uuid" },
                "title": { "type": "string" }
            }
        },
        "framing": {
            "type": "object",
            "description": "Optional framing metadata for the tab this sheet represents.",
            "properties": {
                "framing_id": { "type": "string", "format": "uuid" },
                "political_framing_id": { "type": "string" },
                "frame_title": { "type": "string" }
            }
        },
        "sections": {
            "type": "object",
            "properties": {
                "framing_summary": {
                    "type": "string"
                },
                "scenario_summary": {
                    "type": "string"
                },
                "key_issues": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "evidence_cards": {
                    "type": "array",
                    "items": { "$ref": "EvidenceCard.schema.json" }
                },
                "planning_balance": {
                    "type": "string"
                },
                "conditional_position": {
                    "type": "string"
                },
                "uncertainty_summary": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "framing_summary",
                "key_issues",
                "evidence_cards",
                "planning_balance",
                "conditional_position"
            ]
        }
    },
    "required": [
        "title",
        "sections"
    ]
}
