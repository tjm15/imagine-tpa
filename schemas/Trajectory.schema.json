{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Trajectory",
    "type": "object",
    "properties": {
        "trajectory_id": {
            "type": "string",
            "format": "uuid"
        },
        "scenario_id": {
            "type": ["string", "null"],
            "format": "uuid",
            "description": "The scenario tab this trajectory/position is attached to (scenario models are the primary comparison surface)."
        },
        "framing_id": {
            "type": "string",
            "format": "uuid"
        },
        "position_statement": {
            "type": "string"
        },
        "explicit_assumptions": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "uuid"
            }
        },
        "key_evidence_refs": {
            "type": "array",
            "items": { "$ref": "EvidenceRef.schema.json" }
        },
        "judgement_sheet_data": {
            "$ref": "ScenarioJudgementSheet.schema.json"
        }
    },
    "required": [
        "trajectory_id",
        "framing_id",
        "position_statement",
        "judgement_sheet_data"
    ],
    "description": "Represents the position/narrative for one Scenario Ã— Framing tab; tabs are the primary comparison surface in Spatial Strategy."
}
