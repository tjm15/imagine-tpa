{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NSIPManifestation",
  "type": "object",
  "description": "TODO: Placeholder schema for a NSIP hypothesis manifestation.",
  "properties": {
    "nsip_manifestation_id": { "type": "string", "format": "uuid" },
    "nsip_hypothesis_id": { "type": "string", "format": "uuid" },
    "description": { "type": "string" },
    "expected_by": { "type": ["string", "null"], "format": "date-time" },
    "status": {
      "type": "string",
      "enum": ["pending", "observed", "not_observed"]
    },
    "evidence_ref_ids": {
      "type": "array",
      "items": { "type": "string", "format": "uuid" }
    }
  },
  "required": ["nsip_manifestation_id", "nsip_hypothesis_id", "description", "status"]
}
