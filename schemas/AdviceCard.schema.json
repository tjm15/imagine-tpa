{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AdviceCard",
  "type": "object",
  "description": "Planner-facing advisory card attached to ingested materials. Not evidence and not a determination.",
  "properties": {
    "card_id": { "type": "string" },
    "title": { "type": "string" },
    "type": {
      "type": "string",
      "enum": ["completeness_prompt", "interpretive_reminder", "reasoning_template"]
    },
    "basis": {
      "type": "string",
      "enum": [
        "national_policy_guidance",
        "professional_practice",
        "inspectorate_appeal_practice",
        "common_validation_practice"
      ]
    },
    "priority": { "type": "string", "enum": ["critical", "important", "helpful"] },
    "status": { "type": "string", "enum": ["advisory_only"] },
    "applies_to": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": ["plan_making", "local_plan", "spd", "design_code", "dm"]
      }
    },
    "applies_at": { "type": "array", "items": { "type": "string" } },
    "dimensions": { "type": "array", "items": { "type": "string" } },
    "trigger_cues": { "type": "array", "items": { "type": "string" } },
    "prompt": { "type": "string" },
    "source_ids": { "type": "array", "items": { "type": "string" } },
    "notes": { "type": "string" }
  },
  "required": ["card_id", "title", "type", "basis", "priority", "status", "prompt", "applies_to"]
}
