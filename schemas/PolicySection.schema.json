{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PolicySection",
  "type": "object",
  "description": "A parsed policy section extracted from a source document, with heading metadata and text span.",
  "properties": {
    "policy_section_id": { "type": "string", "format": "uuid" },
    "document_id": { "type": "string", "format": "uuid" },
    "policy_code": { "type": ["string", "null"] },
    "title": { "type": ["string", "null"] },
    "heading_text": { "type": ["string", "null"] },
    "section_path": { "type": ["string", "null"] },
    "text": { "type": "string" },
    "page_start": { "type": ["integer", "null"] },
    "page_end": { "type": ["integer", "null"] },
    "evidence_ref": { "type": ["string", "null"] },
    "metadata": { "type": "object" }
  },
  "required": ["policy_section_id", "document_id", "text"]
}
