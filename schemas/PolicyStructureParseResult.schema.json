{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PolicyStructureParseResult",
  "type": "object",
  "description": "LLM instrument output for policy sectionisation, clauses, definitions, targets, and monitoring hooks.",
  "properties": {
    "policy_sections": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "section_id": { "type": "string" },
          "policy_code": { "type": ["string", "null"] },
          "title": { "type": ["string", "null"] },
          "heading_text": { "type": ["string", "null"] },
          "section_path": { "type": ["string", "null"] },
          "block_ids": { "type": "array", "items": { "type": "string" } },
          "clauses": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "clause_id": { "type": "string" },
                "clause_ref": { "type": ["string", "null"] },
                "text": { "type": "string" },
                "block_ids": { "type": "array", "items": { "type": "string" } },
                "speech_act": { "$ref": "PolicySpeechAct.schema.json" },
                "subject": { "type": ["string", "null"] },
                "object": { "type": ["string", "null"] }
              },
              "required": ["text"]
            }
          },
          "definitions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "term": { "type": "string" },
                "definition_text": { "type": "string" },
                "block_ids": { "type": "array", "items": { "type": "string" } }
              },
              "required": ["term", "definition_text"]
            }
          },
          "targets": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "metric": { "type": ["string", "null"] },
                "value": { "type": ["number", "null"] },
                "unit": { "type": ["string", "null"] },
                "timeframe": { "type": ["string", "null"] },
                "geography_ref": { "type": ["string", "null"] },
                "raw_text": { "type": ["string", "null"] },
                "block_ids": { "type": "array", "items": { "type": "string" } }
              }
            }
          },
          "monitoring": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "indicator_text": { "type": "string" },
                "block_ids": { "type": "array", "items": { "type": "string" } }
              },
              "required": ["indicator_text"]
            }
          }
        },
        "required": ["block_ids"]
      }
    },
    "deliberate_omissions": { "type": "array", "items": { "$ref": "DeliberateOmission.schema.json" } },
    "limitations": { "type": "array", "items": { "type": "string" } }
  },
  "required": ["policy_sections"]
}
