          "risk_flags": {
            "type": "array",
            "items": { "type": "string" }
          },
          "material_consideration_tags": {
            "type": "array",
            "items": { "type": "string" }
          },
          "follow_up_requests": {
            "type": "array",
            "items": { "type": "string" }
          },
          "evidence_region_id": { "type": "string" }
