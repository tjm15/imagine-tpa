{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ScenarioFramingTab",
  "type": "object",
  "description": "A single UI tab representing a Scenario Ã— Framing combination with its own run log and rendered outputs.",
  "properties": {
    "tab_id": { "type": "string", "format": "uuid" },
    "scenario_set_id": { "type": "string", "format": "uuid" },
    "scenario_id": { "type": "string", "format": "uuid" },
    "framing_id": { "type": "string", "format": "uuid" },
    "run_id": { "type": ["string", "null"], "format": "uuid" },
    "status": {
      "type": "string",
      "enum": ["queued", "running", "complete", "failed"]
    },
    "trajectory_id": { "type": ["string", "null"], "format": "uuid" },
    "judgement_sheet_ref": { "type": ["string", "null"], "description": "Reference to the rendered sheet artefact (HTML path/blob ref)." },
    "last_updated_at": { "type": ["string", "null"], "format": "date-time" }
  },
  "required": ["tab_id", "scenario_id", "framing_id", "status"]
}

