{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NSIPCase",
  "type": "object",
  "description": "TODO: Placeholder schema for a NSIP case record.",
  "properties": {
    "nsip_case_id": { "type": "string", "format": "uuid" },
    "reference": { "type": "string" },
    "title": { "type": "string" },
    "status": {
      "type": "string",
      "enum": ["draft", "active", "closed", "archived"]
    },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": ["string", "null"], "format": "date-time" }
  },
  "required": ["nsip_case_id", "status", "created_at"]
}
