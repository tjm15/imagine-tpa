{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MoveEvent",
  "type": "object",
  "properties": {
    "move_id": { "type": "string", "format": "uuid" },
    "run_id": { "type": "string", "format": "uuid" },
    "move_type": { "type": "string", "enum": ["framing", "issue_surfacing", "evidence_curation", "evidence_interpretation", "considerations_formation", "weighing_and_balance", "negotiation_and_alteration", "positioning_and_narration"] },
    "inputs": { "type": "object" },
    "outputs": { "type": "object" },
    "tool_runs": { "type": "array", "items": { "type": "string", "format": "uuid" } },
    "timestamp": { "type": "string", "format": "date-time" }
  },
  "required": ["move_id", "run_id", "move_type", "timestamp"]
}
