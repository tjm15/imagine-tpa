{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ToolRequest",
  "type": "object",
  "description": "A request to execute an evidence instrument or tool to address an evidence gap.",
  "properties": {
    "tool_request_id": { "type": "string", "format": "uuid" },
    "tool_name": { "type": "string" },
    "instrument_id": { "type": "string" },
    "inputs": { "type": "object" },
    "purpose": { "type": "string" },
    "blocking": { "type": "boolean", "default": true },
    "requested_by_move_type": {
      "type": "string",
      "enum": [
        "framing",
        "issue_surfacing",
        "evidence_curation",
        "evidence_interpretation",
        "considerations_formation",
        "weighing_and_balance",
        "negotiation_and_alteration",
        "positioning_and_narration"
      ]
    },
    "requested_at": { "type": "string", "format": "date-time" }
  },
  "required": ["tool_request_id", "purpose", "inputs"]
}

