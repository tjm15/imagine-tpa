{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "VisualRedlineDetection",
  "type": "object",
  "properties": {
    "red_line_present": { "type": "boolean" },
    "bbox": {
      "anyOf": [
        {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 4,
          "maxItems": 4
        },
        { "type": "null" }
      ]
    },
    "confidence": { "type": "string" },
    "notes": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": ["red_line_present", "bbox", "confidence", "notes"],
  "additionalProperties": false
}
