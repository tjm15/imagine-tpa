{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Interpretation",
    "type": "object",
    "properties": {
        "interpretation_id": {
            "type": "string",
            "format": "uuid"
        },
        "claim": {
            "type": "string"
        },
        "evidence_refs": {
            "type": "array",
            "items": { "$ref": "EvidenceRef.schema.json" }
        },
        "assumptions_used": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "uuid"
            }
        },
        "limitations_text": {
            "type": "string"
        },
        "confidence": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0,
            "description": "Optional model/provider confidence for this interpretation when available (do not treat as truth)."
        }
    },
    "required": [
        "interpretation_id",
        "claim",
        "evidence_refs"
    ]
}
