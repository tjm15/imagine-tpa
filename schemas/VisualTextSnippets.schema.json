{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "VisualTextSnippets",
  "type": "object",
  "properties": {
    "snippets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "text": { "type": "string" },
          "bbox": {
            "anyOf": [
              {
                "type": "array",
                "items": { "type": "number" },
                "minItems": 4,
                "maxItems": 4
              },
              { "type": "null" }
            ]
          },
          "confidence": { "type": "string" }
        },
        "required": ["text"],
        "additionalProperties": true
      }
    },
    "limitations": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": ["snippets", "limitations"],
  "additionalProperties": false
}
