{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GISLayerRef",
  "type": "object",
  "description": "A reference to a GIS layer endpoint or portal identifier.",
  "properties": {
    "name": { "type": "string" },
    "type": { "type": "string" },
    "url": { "type": ["string", "null"] },
    "id": { "type": ["string", "null"] }
  },
  "required": ["name", "type"],
  "anyOf": [
    { "required": ["url"] },
    { "required": ["id"] }
  ]
}

