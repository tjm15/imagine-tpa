          "block_ids": {"type": "array", "items": {"type": "string"}}
        },
        "required": ["raw_text", "block_ids"]
      }
    },
    "monitoring": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "indicator_text": {"type": "string"},
          "block_ids": {"type": "array", "items": {"type": "string"}}
        },
        "required": ["indicator_text", "block_ids"]
      }
    },
    "deliberate_omissions": {"type": "array", "items": {"type": "string"}},
    "limitations": {"type": "array", "items": {"type": "string"}}
  }
