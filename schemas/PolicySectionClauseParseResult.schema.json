    "clauses": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "clause_id": {"type": ["string", "null"]},
          "clause_ref": {"type": ["string", "null"]},
          "text": {"type": "string"},
          "block_ids": {"type": "array", "items": {"type": "string"}},
          "speech_act": {"type": ["object", "null"]},
          "subject": {"type": ["string", "null"]},
          "object": {"type": ["string", "null"]}
        },
        "required": ["text", "block_ids"]
      }
    },
    "definitions": {
      "type": "array",
