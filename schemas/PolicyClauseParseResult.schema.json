{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PolicyClauseParseResult",
  "type": "object",
  "description": "LLM/VLM instrument output for parsing a policy section into citeable clause fragments with modality characterisation.",
  "properties": {
    "clauses": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "clause_ref": { "type": ["string", "null"] },
          "text": { "type": "string" },
          "source_evidence_refs": {
            "type": "array",
            "items": { "$ref": "EvidenceRef.schema.json" }
          },
          "speech_act": { "$ref": "PolicySpeechAct.schema.json" }
        },
        "required": ["text", "source_evidence_refs", "speech_act"]
      }
    },
    "policy_level_notes": { "type": ["string", "null"] },
    "deliberate_omissions": {
      "type": "array",
      "items": { "$ref": "DeliberateOmission.schema.json" }
    }
  },
  "required": ["clauses"]
}
